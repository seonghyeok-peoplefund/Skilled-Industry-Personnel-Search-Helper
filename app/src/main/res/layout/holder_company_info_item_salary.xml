<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:foreground="?attr/selectableItemBackground">

        <View
            android:id="@+id/outline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/outline_height"
            android:layout_marginStart="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/whity"
            app:layout_constraintTop_toBottomOf="@+id/salary_subcontent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/salary_image"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@+id/salary_subcontent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/salary_content"
            app:srcCompat="@drawable/ic_money"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:padding="@dimen/padding_normal"/>

        <TextView
            android:id="@+id/salary_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="11pt"
            app:layout_constraintStart_toEndOf="@+id/salary_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/salary_subcontent"/>
        <TextView
            android:id="@+id/salary_subcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404040"
            android:textSize="8pt"
            app:layout_constraintStart_toEndOf="@+id/salary_image"
            app:layout_constraintTop_toBottomOf="@+id/salary_content"
            app:layout_constraintBottom_toTopOf="@+id/outline"
            android:layout_marginStart="@dimen/margin_small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>