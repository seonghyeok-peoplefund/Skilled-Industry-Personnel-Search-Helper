<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/news_intro_image"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@+id/news_intro_subcontent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/news_intro_content"
            app:srcCompat="@drawable/ic_news"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:padding="@dimen/spacing_normal"/>

        <TextView
            android:id="@+id/news_intro_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big"
            android:singleLine="true"
            android:ellipsize="none"
            android:text="@string/news_intro_content"
            app:layout_constraintStart_toEndOf="@+id/news_intro_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/news_intro_subcontent"/>

        <TextView
            android:id="@+id/news_intro_subcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_normal"
            android:text="@string/news_intro_subcontent"
            android:singleLine="true"
            android:ellipsize="none"
            app:layout_constraintStart_toEndOf="@+id/news_intro_image"
            app:layout_constraintTop_toBottomOf="@+id/news_intro_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/spacing_small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>