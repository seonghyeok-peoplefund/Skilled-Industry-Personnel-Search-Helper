<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/news_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_big"
        android:layout_marginEnd="@dimen/spacing_big"
        android:paddingStart="@dimen/spacing_small"
        android:foreground="?attr/selectableItemBackground">
            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:lines="1"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/news_content"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/news_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="5pt"
                android:lines="2"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintTop_toBottomOf="@+id/news_title"
                app:layout_constraintBottom_toTopOf="@+id/outline"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/outline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/outline_height"
                android:layout_marginStart="@dimen/spacing_big"
                android:layout_marginEnd="@dimen/spacing_big"
                android:layout_marginTop="@dimen/spacing_normal"
                android:background="@color/pinkwhite"
                app:layout_constraintTop_toBottomOf="@+id/news_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>