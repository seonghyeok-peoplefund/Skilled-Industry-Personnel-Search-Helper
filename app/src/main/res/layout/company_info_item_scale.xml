<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?attr/selectableItemBackground">

        <View
            android:id="@+id/outline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="15dp"
            android:background="@color/whity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scale_subcontent"
            app:layout_constraintVertical_bias="0.857" />

        <ImageView
            android:id="@+id/scale_image"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/scale_content"
            app:layout_constraintBottom_toBottomOf="@+id/scale_subcontent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_people"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/scale_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="11pt"
            app:layout_constraintStart_toEndOf="@+id/scale_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scale_subcontent"
            app:layout_constraintEnd_toStartOf="@+id/personnel_content"/>
        <TextView
            android:id="@+id/scale_subcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404040"
            android:textSize="8pt"
            app:layout_constraintStart_toEndOf="@+id/scale_image"
            app:layout_constraintTop_toBottomOf="@+id/scale_content"
            app:layout_constraintBottom_toTopOf="@+id/outline"
            app:layout_constraintEnd_toEndOf="@+id/scale_content"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/personnel_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="7pt"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/scale_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/personnel_subcontent"/>
        <TextView
            android:id="@+id/personnel_subcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404040"
            android:textSize="7pt"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/scale_content"
            app:layout_constraintTop_toBottomOf="@+id/personnel_content"
            app:layout_constraintBottom_toBottomOf="@+id/scale_subcontent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>